<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <androidx.cardview.widget.CardView
        android:id="@+id/allPhotosCV"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/allSavedIV1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/no_image_in_imageView_color"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/allSavedIV2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/imageview"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <ImageView
                android:id="@+id/allSavedIV2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/no_image_in_imageView_color"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="@+id/allSavedIV1"
                app:layout_constraintEnd_toStartOf="@+id/allSavedIV3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/allSavedIV1"
                app:layout_constraintTop_toTopOf="@+id/allSavedIV1"
                android:contentDescription="@string/imageview"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <ImageView
                android:id="@+id/allSavedIV3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/no_image_in_imageView_color"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="@+id/allSavedIV2"
                app:layout_constraintEnd_toStartOf="@+id/allSavedIV4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/allSavedIV2"
                app:layout_constraintTop_toTopOf="@+id/allSavedIV2"
                android:contentDescription="@string/imageview"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <ImageView
                android:id="@+id/allSavedIV4"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/no_image_in_imageView_color"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="@+id/allSavedIV3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/allSavedIV3"
                app:layout_constraintTop_toTopOf="@+id/allSavedIV3"
                android:contentDescription="@string/imageview"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <View
                android:id="@+id/view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black_transparent_background_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_photos"
                android:textColor="@color/text_color"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/collectionRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allPhotosCV" />

    <TextView
        android:id="@+id/noCollectionAddedTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="No collections added"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/collectionRV"
        app:layout_constraintEnd_toEndOf="@id/collectionRV"
        app:layout_constraintStart_toStartOf="@+id/collectionRV"
        app:layout_constraintTop_toTopOf="@+id/collectionRV"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>